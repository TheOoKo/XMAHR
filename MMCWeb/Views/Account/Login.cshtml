@model MMCWeb.Models.MemberViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MYANMAR MEDICAL COUNCIL - LOGIN</title>
    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/themes/assets/css/icons/icomoon/styles.css" rel="stylesheet" type="text/css">
    <link href="~/themes/assets/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/themes/assets/css/core.css" rel="stylesheet" type="text/css">
    <link href="~/themes/assets/css/components.css" rel="stylesheet" type="text/css">
    <link href="~/themes/assets/css/colors.css" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->
    <!-- Core JS files -->
    @*<script type="text/javascript" src="~/assets/js/plugins/loaders/pace.min.js"></script>*@
    <script type="text/javascript" src="~/themes/assets/js/core/libraries/jquery.min.js"></script>
    <script type="text/javascript" src="~/themes/assets/js/core/libraries/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/themes/assets/js/plugins/loaders/blockui.min.js"></script>

</head>
<body>
    <!-- Main navbar -->
    @*<div class="navbar navbar-inverse">
            <div class="navbar-header">
                <a class="navbar-brand" href="index.html"><img src="~/assets/images/logo_light.png" alt=""></a>
                <ul class="nav navbar-nav pull-right visible-xs-block">
                    <li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
                </ul>
            </div>

        </div>*@
    <!-- /main navbar -->
    <!-- Page container -->
    <div class="page-container login-container">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Content area -->
                <div class="content">
                    <!-- Simple login form -->



                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="panel panel-body login-form">
                            <div class="text-center">
                                <div class="icon-object border-slate-300 text-slate-300"><i class="icon-reading"></i></div>
                                <h5 class="content-group">Login to your account <small class="display-block">Enter your credentials below</small></h5>
                            </div>
                            <div class="form-group has-feedback has-feedback-left">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
                                <div class="form-control-feedback">
                                    <i class="icon-user text-muted"></i>
                                </div>

                            </div>
                            <div class="form-group has-feedback has-feedback-left">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                <div class="form-control-feedback">
                                    <i class="icon-lock2 text-muted"></i>
                                </div>

                            </div>
                            <div class="form-group pl-5">

                                <div class="checkbox ">
                                    @*@Html.CheckBoxFor(m => m.Remember)*@
                                    <input type="checkbox" class="styled" name="Remember" id="Remember" value="True">
                                    <label for="Remember">&nbsp;Remember Me</label>
                                </div>

                            </div>

                            @{
                                if (ViewBag.Unauthorize == "Unauthorize")
                                {
                                    <div class="form-group">
                                        <h6 class="text-warning text-center">Username or Password is incorrect.</h6>
                                    </div>
                                }
                            }

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Sign in <i class="icon-circle-right2 position-right"></i></button>
                            </div>

                        </div>

                                }
                    <!-- /simple login form -->
                    <!-- Footer -->
                    <div class="footer text-muted">
                        &copy; 2016. <a href="#">Myanmar Medical Council</a>
                    </div>
                    <!-- /footer -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->
</body>
</html>
