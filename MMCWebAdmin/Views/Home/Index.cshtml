        function ShowList(action, div, data) {
            $.ajax({
                cache: false,
                url: action,
                data: data,
                beforeSend: function () {
                    $(div).empty().append('<div class="spinner"><div class="bounce1"></div><div class="bounce2"></div><div class="bounce3"></div></div> <h5 class="text-center">Loading...</h5>');
                },
                success: function (myData) {
                    $(div).empty().append(myData);
                },
                complete: function () {

                }
            });
        }

        function bindRegForm(data, id) {

            $.ajax({
                cache: false,
                url: '@Url.Action("AddForm", "Registration")',
                data: { data: data, id: id },
                beforeSend: function () {
                    console.log('aa');
                },
                success: function (myData) {
                    $('.reg').empty().append(myData);
                },
                complete: function () {
                    $('#registration').modal('show');

                    $("#AddForm").submit(function (e) {
                        e.preventDefault();
                          $.ajax({
                                cache: false,
                                type: "POST",
                                url: '@Url.Action("UpdReg", "Registration")',
                                data: $(this).serialize(),
                                beforeSend: function () {
                                    console.log('aaaa');
                                },
                                success: function (myData) {
                                    if (myData == "Success") {
                                         ShowList('@Url.Action("_RegistrationList", "Registration")', "#regList");
                                    }
                                },
                                complete: function () {
                                    $('#registration').modal('hide');
                                }
                            });
                        });

                }
            });
        }

    </script>

