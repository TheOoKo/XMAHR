@model DMAHR.Models.Doctor

@using (Html.BeginForm("UpdReg", "Registration", FormMethod.Post, new { @id = "AddForm" }))
{
    @Html.AntiForgeryToken()


    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Add New Registration</h4>
    </div>
    <div class="modal-body">
      
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4" style="padding-left:10px;">
                        <fieldset>
                            <div class="form-group">
                                <label>Name</label>
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Father Name</label>
                                @Html.TextBoxFor(model => model.FatherName, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>State</label>
                                @Html.TextBoxFor(model => model.AdState, new { @class = "form-control" })
                            </div>

                        </fieldset>
                    </div>
                    <div class="col-md-4" style="padding-left:10px;">
                        <fieldset>
                            <div class="form-group">
                                <label>NRC No:</label>
                                @Html.TextBoxFor(model => model.NRCNo, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Phone Number</label>
                                @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Township</label>
                                @Html.TextBoxFor(model => model.AdTownship, new { @class = "form-control" })
                            </div>

                        </fieldset>
                    </div>
                    <div class="col-md-4" style="padding-left:20px;">
                        <fieldset>
                            <div class="form-group">
                                <label>Reg No</label>
                                @Html.TextBoxFor(model => model.MMCNo, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>License /no</label>
                                @Html.TextBoxFor(model => model.LicenseNo, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                            </div>

                        </fieldset>
                    </div>

                </div>

            </div>
        </div>
  
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary btnmain">Save</button>  
      </div>


        @Html.HiddenFor(model => model.ID, new { id = "ID" })
         @Html.HiddenFor(model => model.Race, new { id = "Race" })

}
